<DomainHeader@Label>:
    color: app.COLOR_FONT_MAIN
    font_name: app.FONT_HEADER
    outline_color: 0,0,0
    outline_width: 1
    font_size: 48
    size_hint: None, None
    size: 150, 50
    pos_hint: {'center_x':0.5, 'center_y':0.9}

<DomainSubHeader@Label>:
    color: app.COLOR_FONT_MAIN
    halign: "center"
    valign: "middle"
    pos_hint: {'center_x':0.5, 'center_y':0.8}
    font_name: app.FONT_SUB_TEXT_2
    font_size: 48
    #size: root.height/3, root.height/2
    outline_color: 0,0,0
    outline_width: 1

<H1Header@Label>:
    color: app.COLOR_FONT_MAIN
    font_name: app.FONT_HEADER
    outline_color: 0,0,0
    outline_width: 1

    font_size: 78
    size_hint_y: None
    height: self.texture_size[1]
    text_size: self.width, None
    halign: 'center'
    valign: 'middle'

<H2Header@Label>:
    color: app.COLOR_FONT_MAIN
    font_name: app.FONT_HEADER
    outline_color: 0,0,0
    outline_width: 1

    italic: True
    font_size: 32
    size_hint_y: None
    height: self.texture_size[1]
    text_size: self.width, None
    halign: 'center'
    valign: 'middle'


