<BackgroundImage@Widget>:
    canvas.before:
        Rectangle:
            pos: self.pos
            size: self.size
            source: 'images/background3.jpg'

<Wheel1Image@Image>:
    angle: 0
    canvas.before:
        PushMatrix
        Rotate:
            angle: root.angle
            axis: 0, 0, 1
            origin: root.center
    canvas.after:
        PopMatrix
    source: 'images/wheel1.png'
    size_hint_x: 0.4
    pos_hint: {'center_x':0.5, 'center_y':0.5}

